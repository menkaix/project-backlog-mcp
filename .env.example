# HyperManager API Configuration
HYPERMANAGER_API_KEY=your-hypermanager-api-key-here

# MCP Server Security
MCP_SERVER_SECRET=your-jwt-secret-here-change-this-in-production
ALLOWED_TOKENS=token1,token2,token3

# Server Configuration
HOST=0.0.0.0
PORT=3000
NODE_ENV=production

# CORS Configuration (optional)
ALLOWED_ORIGINS=https://yourdomain.com,https://anotherdomain.com

# Base path for reverse proxy (e.g., /backlog-mcp)
BASE_PATH=/backlog-mcp

# Proxy Configuration
# Trust proxy settings - set to true when behind nginx/apache reverse proxy
TRUST_PROXY=true
# Comma-separated list of trusted proxy IPs (optional, leave empty to trust all)
TRUSTED_PROXIES=
# Maximum number of hops to trust (default: 1 for single reverse proxy)
PROXY_HOPS=1
